@model _24DH113309_MyStore.Models.Order

@{
    ViewBag.Title = "Xác nhận xóa Đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-danger">@ViewBag.Title #@Model.OrderID</h2>

<h3 class="text-danger">Bạn có chắc chắn muốn xóa đơn hàng này?</h3>
<p class="lead">Chi tiết của đơn hàng này cũng sẽ bị xóa vĩnh viễn.</p>

<div class="card shadow-sm mt-4">
    <div class="card-header">
        <h5>Thông tin đơn hàng</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Khách hàng</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Customer.CustomerName)</dd>

            <dt class="col-sm-3">Ngày đặt</dt>
            <dd class="col-sm-9">@Model.OrderDate.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">Tổng tiền</dt>
            <dd class="col-sm-9">@Model.TotalAmount.ToString("N0") VNĐ</dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color mt-3">
                <input type="submit" value="Xóa vĩnh viễn" class="btn btn-danger me-2" />
                @Html.ActionLink("Hủy (Quay lại danh sách)", "Index", null, new { @class = "btn btn-secondary" })
            </div>
        }
    </div>
</div>