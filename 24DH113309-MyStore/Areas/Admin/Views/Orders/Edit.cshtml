@model _24DH113309_MyStore.Models.Order
@{
    ViewBag.Title = "Chỉnh sửa đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-primary">CẬP NHẬT ĐƠN HÀNG</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 class="text-info">Thông tin đơn hàng #@Model.OrderID</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.OrderID)

        <div class="form-group mb-3">
            @Html.LabelFor(model => model.CustomerID, "Khách hàng", htmlAttributes: new { @class = "control-label" })
            <p class="form-control-static">@Model.Customer.CustomerName (ID: @Model.CustomerID)</p>
            @Html.HiddenFor(model => model.CustomerID)
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(model => model.OrderDate, "Ngày đặt", htmlAttributes: new { @class = "control-label" })
            <p class="form-control-static">@Html.DisplayFor(model => model.OrderDate)</p>
        </div>
        <div class="form-group mb-3">
            @Html.LabelFor(model => model.TotalAmount, "Tổng tiền", htmlAttributes: new { @class = "control-label" })
            <p class="form-control-static">@String.Format("{0:N0} VNĐ", Model.TotalAmount)</p>
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(model => model.PaymentStatus, "Trạng thái thanh toán", htmlAttributes: new { @class = "control-label" })
            @Html.DropDownListFor(model => model.PaymentStatus, (SelectList)ViewBag.PaymentStatusList, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.PaymentStatus, "", new { @class = "text-danger" })
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(model => model.AddressDelivery, "Địa chỉ giao hàng", htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.AddressDelivery, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.AddressDelivery, "", new { @class = "text-danger" })
        </div>

        <div class="form-group mt-4">
            <input type="submit" value="Lưu thay đổi" class="btn btn-primary me-2" />
            @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    </div>
}