@model PagedList.IPagedList<_24DH113309_MyStore.Models.Order>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Quản lý đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-success" style="background-color:#e6f5e6; padding:10px;">QUẢN LÝ ĐƠN HÀNG</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<table class="table table-bordered table-hover">
    <thead style="background-color:#d9ead3;">
        <tr>
            <th>Mã đơn</th>
            <th>Khách hàng</th>
            <th>Ngày đặt</th>
            <th>Tổng tiền</th>
            <th>Thanh toán</th>
            <th>Địa chỉ giao hàng</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.OrderID</td>
                <td>@item.Customer.CustomerName</td>
                <td>@item.OrderDate.ToString("dd/MM/yyyy")</td>
                <td>@String.Format("{0:N0} VNĐ", item.TotalAmount)</td>
                <td>
                    @if (item.PaymentStatus == "Paid" || item.PaymentStatus == "Đã thanh toán")
                    {
                        <span class="badge bg-success">Đã thanh toán</span>
                    }
                    else
                    {
                        <span class="badge bg-warning text-dark">@item.PaymentStatus</span>
                    }
                </td>
                <td>@item.AddressDelivery</td>
                <td>
                    <button class="btn btn-outline-secondary btn-sm" type="button"
                            data-bs-toggle="collapse"
                            data-bs-target="#order-@item.OrderID">
                        Xem SP
                    </button>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.OrderID }, new { @class = "btn btn-primary btn-sm" })
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.OrderID }, new { @class = "btn btn-info btn-sm" })
                    @Html.ActionLink("Xóa", "Delete", new { id = item.OrderID }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>

            <tr id="order-@item.OrderID" class="collapse">
                <td colspan="7" style="background-color:#f8f9fa;">
                    <b>Sản phẩm trong đơn:</b>
                    @if (item.OrderDetails != null && item.OrderDetails.Any())
                    {
                        <ul style="margin-top:5px;">
                            @foreach (var detail in item.OrderDetails)
                            {
                                <li>
                                    @detail.Product.ProductName — SL: @detail.Quantity — Giá: @detail.UnitPrice.ToString("N0") ₫
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted">Không có sản phẩm trong đơn này.</p>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="pagination-wrapper text-center mt-3">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }),
            new PagedListRenderOptions
            {
                Display = PagedListDisplayMode.IfNeeded,
                UlElementClasses = new[] { "pagination" },
                LiElementClasses = new[] { "page-item" },
                LinkToPreviousPageFormat = "«",
                LinkToNextPageFormat = "»",
                MaximumPageNumbersToDisplay = 5,
                ContainerDivClasses = new[] { "text-center" }
            })
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}