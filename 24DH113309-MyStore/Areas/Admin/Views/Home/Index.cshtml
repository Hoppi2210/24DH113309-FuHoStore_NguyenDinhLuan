@using System.Linq

@{
    ViewBag.Title = "Trang chủ quản trị";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";

    var customers = (IEnumerable<_24DH113309_MyStore.Models.ViewModels.ChartVM>)ViewBag.CustomerChart
                    ?? new List<_24DH113309_MyStore.Models.ViewModels.ChartVM>();
    var products = (IEnumerable<_24DH113309_MyStore.Models.ViewModels.ChartVM>)ViewBag.ProductChart
                    ?? new List<_24DH113309_MyStore.Models.ViewModels.ChartVM>();
}

<h2 class="text-center mb-4 text-primary">📊 Thống kê tổng quan</h2>

<div class="row">
    <!-- Khách hàng -->
    <div class="col-md-6">
        <h4 class="text-center text-success">Khách hàng theo tháng</h4>
        <table class="table table-bordered text-center">
            <thead class="bg-success text-white">
                <tr><th>Tháng</th><th>Số lượng</th></tr>
            </thead>
            <tbody>
                @foreach (var item in customers)
                {
                    <tr><td>@item.Category</td><td>@item.Count</td></tr>
                }
            </tbody>
        </table>
        <div id="customer_chart" style="width:100%; height:400px;"></div>
    </div>

    <!-- Sản phẩm -->
    <div class="col-md-6">
        <h4 class="text-center text-primary">Sản phẩm theo loại hàng</h4>
        <table class="table table-bordered text-center">
            <thead class="bg-primary text-white">
                <tr><th>Danh mục</th><th>Số lượng</th></tr>
            </thead>
            <tbody>
                @foreach (var item in products)
                {
                    <tr><td>@item.Category</td><td>@item.Count</td></tr>
                }
            </tbody>
        </table>
        <div id="product_chart" style="width:100%; height:400px;"></div>
    </div>
</div>

<!-- Google Charts -->
<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script type="text/javascript">
    google.charts.load('current', { packages: ['corechart'] });
    google.charts.setOnLoadCallback(drawCharts);

    function drawCharts() {
        // Biểu đồ khách hàng
        var data1 = google.visualization.arrayToDataTable([
            ['Tháng', 'Số lượng'],
            @for (int i = 0; i < customers.Count(); i++)
            {
                var item = customers.ElementAt(i);
                var comma = (i < customers.Count() - 1) ? "," : "";
                @: ['@item.Category', @item.Count]@Html.Raw(comma)
            }
        ]);

        var chart1 = new google.visualization.PieChart(document.getElementById('customer_chart'));
        chart1.draw(data1, { title: 'Khách hàng theo tháng', pieHole: 0.4, legend: { position: 'right' } });

        // Biểu đồ sản phẩm
        var data2 = google.visualization.arrayToDataTable([
            ['Loại hàng', 'Số lượng'],
            @for (int i = 0; i < products.Count(); i++)
            {
                var item = products.ElementAt(i);
                var comma = (i < products.Count() - 1) ? "," : "";
                @: ['@item.Category', @item.Count]@Html.Raw(comma)
            }
        ]);

        var chart2 = new google.visualization.ColumnChart(document.getElementById('product_chart'));
        chart2.draw(data2, { title: 'Sản phẩm theo loại hàng', legend: { position: 'none' }, colors: ['#00aaff'] });
    }
</script>
