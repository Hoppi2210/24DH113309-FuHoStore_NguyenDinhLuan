@model IEnumerable<_24DH113309_MyStore.Models.Customer>

@{
    ViewBag.Title = "Danh sách khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-center text-success">QUẢN LÝ KHÁCH HÀNG</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<table class="table table-bordered table-hover text-center">
    <thead class="bg-success text-white">
        <tr>
            <th><input type="checkbox" id="checkAll" /></th>
            <th>Mã KH</th>
            <th>Họ và Tên</th>
            <th>Email</th>
            <th>Hình ảnh</th>
            <th>Trạng thái</th>
            <th>Vai trò</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><input type="checkbox" /></td>
                <td>@item.CustomerID</td>
                <td>@item.CustomerName</td>
                <td>@item.CustomerEmail</td>
                <td>
                    <img src="~/Content/Images/Customers/@item.CustomerImage" style="width:70px;height:70px;border-radius:8px;" />
                </td>
                <td>@(item.IsActive == true ? "Kích hoạt" : "Chưa kích hoạt")</td>
              
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.CustomerID }, new { @class = "btn btn-warning btn-sm" }) |
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.CustomerID }, new { @class = "btn btn-info btn-sm" }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.CustomerID }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="text-end mt-3">
    <button class="btn btn-success" id="btnCheckAll">Chọn tất cả</button>
    <button class="btn btn-secondary" id="btnUncheckAll">Bỏ chọn</button>
   
    <a href="@Url.Action("Create")" class="btn btn-primary">Nhập thêm</a>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Chọn tất cả
            $("#checkAll").change(function () {
                $("tbody input[type='checkbox']").prop('checked', $(this).prop('checked'));
            });

            $("#btnCheckAll").click(function () {
                $("tbody input[type='checkbox']").prop('checked', true);
                $("#checkAll").prop('checked', true);
            });

            $("#btnUncheckAll").click(function () {
                $("tbody input[type='checkbox']").prop('checked', false);
                $("#checkAll").prop('checked', false);
            });
        });
    </script>
}