@model _24DH113309_MyStore.Models.Customer

@{
    ViewBag.Title = "Xác nhận xóa Khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-danger">@ViewBag.Title</h2>

<h3 class="text-danger">Bạn có chắc chắn muốn xóa khách hàng này?</h3>
<p class="lead">Tất cả đơn hàng, địa chỉ, và giỏ hàng của khách hàng này cũng sẽ bị xóa vĩnh viễn.</p>

<div class="card shadow-sm mt-4">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Họ và Tên</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.CustomerName)</dd>

            <dt class="col-sm-3">Tên đăng nhập</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Username)</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.CustomerEmail)</dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color mt-3">
                <input type="submit" value="Xóa vĩnh viễn" class="btn btn-danger me-2" />
                @Html.ActionLink("Hủy (Quay lại danh sách)", "Index", null, new { @class = "btn btn-secondary" })
            </div>
        }
    </div>
</div>