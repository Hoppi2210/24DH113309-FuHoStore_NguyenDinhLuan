@model _24DH113309_MyStore.Models.Customer
@{
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<div class="container mt-5" style="max-width:520px;">
    <div class="card shadow-sm">
        <div class="card-body">
            <h3 class="text-center mb-4">📝 Đăng ký</h3>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }

            @using (Html.BeginForm())
            {
                <label>Họ và tên</label>
                @Html.TextBoxFor(m => m.CustomerName, new { @class = "form-control", required = "required" })

                <label class="mt-3">Email</label>
                @Html.TextBoxFor(m => m.CustomerEmail, new { @class = "form-control", type = "email", required = "required" })

                <label class="mt-3">Số điện thoại</label>
                @Html.TextBoxFor(m => m.CustomerPhone, new { @class = "form-control", required = "required" })

                <label class="mt-3">Địa chỉ</label>
                @Html.TextBoxFor(m => m.CustomerAddress, new { @class = "form-control", required = "required" })

                <label class="mt-3">Tên đăng nhập</label>
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control", required = "required" })

                <label class="mt-3">Mật khẩu</label>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", required = "required" })

                <label class="mt-3">Nhập lại mật khẩu</label>
                <input name="passwordConfirm" type="password" class="form-control" required />

                <button class="btn btn-primary w-100 mt-4" type="submit">Đăng ký</button>
            }

            <p class="text-center mt-3">
                Đã có tài khoản?
                <a href="@Url.Action("Login")">Đăng nhập</a>
            </p>
        </div>
    </div>
</div>
