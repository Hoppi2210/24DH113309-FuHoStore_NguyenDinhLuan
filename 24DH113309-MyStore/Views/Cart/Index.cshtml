@model _24DH113309_MyStore.Models.ViewModels.CartIndexVM
@using PagedList.Mvc
@{
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
    ViewBag.Title = "Giỏ hàng";
}
<h2>🛒 Giỏ hàng</h2>
<div class="row">
    <div class="col-md-9">
        @if (!Model.GroupedItems.Any())
        {
            <div class="alert alert-info">Giỏ hàng đang trống.</div>
            <a href="/" class="btn btn-primary">Tiếp tục mua sắm</a>
        }
        else
        {
            <a href="@Url.Action("Clear", "Cart")" class="btn btn-sm btn-outline-danger mb-2">Xóa tất cả giỏ hàng</a>

            foreach (var categoryGroup in Model.GroupedItems)
            {
                <h4 class="mt-4 text-primary">@categoryGroup.Key</h4>
                <table class="table table-bordered shadow-sm bg-white">
                    <thead class="table-light">
                        <tr>
                            <th>Sản phẩm</th>
                            <th>Giá</th>
                            <th width="120">SL</th>
                            <th>Tổng</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in categoryGroup)
                        {
                            <tr>
                                <td>
                                    <img src="@item.Product.ProductImage" width="60" alt="@item.Product.ProductName" />
                                    @item.Product.ProductName
                                </td>
                                <td>@item.UnitPrice.ToString("N0") VNĐ</td>
                                <td>
                                    @using (Html.BeginForm("UpdateQuantity", "Cart", FormMethod.Post))
                                    {
                                        <input type="hidden" name="productId" value="@item.ProductID" />
                                        <input type="number" name="quantity" value="@item.Quantity" class="form-control" min="1" />
                                        <button type="submit" class="btn btn-sm btn-info mt-1">Cập nhật</button>
                                    }
                                </td>
                                <td>
                                    @((item.UnitPrice * item.Quantity).ToString("N0")) VNĐ
                                </td>
                                <td>
                                    @using (Html.BeginForm("RemoveItem", "Cart", FormMethod.Post))
                                    {
                                        @Html.Hidden("id", item.CartItemID)
                                        <button type="submit" class="btn btn-danger btn-sm">Xóa</button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        }
    </div>
    <div class="col-md-3">
        <div class="card shadow-sm">
            <div class="card-body">
                <h4>Tổng cộng</h4>
                <h3 class="text-danger">@Model.TotalValue.ToString("N0") VNĐ</h3>
                <hr />
                <a href="@Url.Action("Checkout", "Cart")" class="btn btn-success btn-lg w-100">
                    Thanh toán →
                </a>
            </div>
        </div>
    </div>
</div>
<div class="row mt-5">
    <div class="col-12">
        @Html.Partial("_PVSimilarProduct", Model)
    </div>
</div>