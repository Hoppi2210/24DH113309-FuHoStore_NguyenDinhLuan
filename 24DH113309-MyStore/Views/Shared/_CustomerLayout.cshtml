@using _24DH113309_MyStore.Models
@{
    var cus = Session["CUS"] as Customer;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - MyStore</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <style>
        .user-icon {
            width: 32px;
            height: 32px;
            border-radius: 50%;
            background: #ffc107;
            color: #000;
            display: flex;
            justify-content: center;
            align-items: center;
            font-weight: bold;
        }

        .dropdown-menu a {
            padding: 10px 15px !important;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark py-2">
        <div class="container">
            <a class="navbar-brand fw-bold text-warning" href="@Url.Action("Index","Home")">
                🛍 FUHO Store
            </a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">@Html.ActionLink("Trang chủ", "Index", "Home", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Giỏ hàng", "Index", "Cart", null, new { @class = "nav-link" })</li>

                    @if (cus == null)
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Đăng nhập", "Login", "Account", null, new { @class = "nav-link text-warning fw-bold" })
                        </li>
                    }
                    else
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown">
                                <div class="user-icon me-2">
                                    @cus.CustomerName.Substring(0, 1).ToUpper()
                                </div>
                                @cus.CustomerName
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="@Url.Action("ProfileInfo", "Account")">👤 Thông tin tài khoản</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("MyOrder", "Order")">📦 Lịch sử mua hàng</a></li>

                                <li><hr class="dropdown-divider" /></li>
                                <li><a class="dropdown-item text-danger" href="@Url.Action("Logout", "Account")">🚪 Đăng xuất</a></li>
                            </ul>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <main class="container mt-4">
        @RenderBody()
    </main>
    <footer class="bg-light text-center py-3 mt-5 border-top">

        <p>&copy; @DateTime.Now.Year - CHUC ANH EM 83 86 !!!!</p>
        <h4>Sologan FUHO</h4>
        <p>Sáng đi FuHo,Chiều đi lấy NGÓT nha AE!!!</p>
        <p>Mọi thắc mắc xin vui lòng liên hệ tới: </p>
        <p>SĐT:096677895  Email:FuHoStore@gmail.com </p>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>